Xft.dpi: 96
Xft.antialias: true
Xft.hinting: true
Xft.rgba: rgb
Xft.autohint: true
Xft.hintstyle: hintfull
!! Xft.lcdfilter: lcdfilter

URxvt*imLocale: en_US.UTF-8
URxvt*termName: rxvt-unicode-256color
URxvt*buffered: false
URxvt.intensityStyles: false

URxvt.font: xft:Hack Nerd Font:size=16, xft:FontAwesome:pixelsize=10  

URxvt.saveLines: 2000
URxvt.scrollBar: false
URxvt.cursorColor: #83a598
URxvt*scrollWithBuffer: true
URxvt*crollTtyKeypress: true
!! URxvt.transparent:    true
!! URxvt.shading:     25

URxvt.internalBorder: 30

!! Extensions

! make fontsize changeable with commun shortcuts 
urxvt.perl-ext-common: default,tabbed,matcher,resize-font,-tabbed, url-picker, keyboard-select
URxvt.keysym.M-Escape: perl:keyboard-select:activate
URxvt.url-launcher:	urxvt -e lynx -cfg=~/.lynx.cfg -lss=~/.lynx.lss
URxvt.matcher.button: 1
URxvt*depth: 32

!! clipboard

URxvt.keysym.Control-v: eval:paste_clipboard
URxvt.keysym.Control-c: eval:selection_to_clipboard


!! Common Keybinds for Navigations
URxvt.keysym.Shift-Up: command:\033]720;1\007
URxvt.keysym.Shift-Down: command:\033]721;1\007
URxvt.keysym.Control-Up: \033[1;5A
URxvt.keysym.Control-Down: \033[1;5B
URxvt.keysym.Control-Right: \033[1;5C
URxvt.keysym.Control-Left: \033[1;5D


! hard contrast: *background: #1d2021
*background: #282828
! soft contrast: *background: #32302f
*foreground: #ebdbb2
